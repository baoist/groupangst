<% title "Discussion" %>

<p>
  <strong>Author:</strong>
  <%=h @discussion.author %>
</p>
<p>
  <strong>Subject:</strong>
  <%=h @discussion.subject %>
</p>
<p>
  <strong>Message:</strong>
  <%=h @discussion.message %>
</p>

<p>
  <%= link_to "Edit", edit_discussion_path(@discussion) %> |
  <%= link_to "Destroy", @discussion, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", discussions_path %>
</p>
