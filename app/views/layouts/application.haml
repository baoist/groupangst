!!! strict
%html
  %head
    %meta{:"http-equiv"=>"Content-Type", :content => "text/html; charset=utf-8" }
    %title= get_title
    %meta{:name=>"Robots", :content=>"index,all"}
    
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = javascript_include_tag "jquery-1.3.2.min", :cache => true
    
  %body
    #wrapper
      #header
        %ul#nav
          -if current_user
            %li= link_to "Edit Profile", edit_user_path(:current)
            %li= link_to "Logout", logout_path
          - else
            %li= link_to "Register", new_user_path
            %li= link_to "Login", login_path
      
        %h1
          = link_to "Group Angst", root_url
          
      #flashInfo
        = h flash[:notice]
        = h flash[:error]
      #content
        = yield
      %div.clear
    #footer
      %p.copy
        &copy; 2010 Jake Dahn | Powered By <a href="http://group.ang.st">Group Ang.st</a>