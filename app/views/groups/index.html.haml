%h2=  "Groups"
%ul
- for group in @groups
  %li
    %span.name= h group.name
    %span.desc= h group.description
    %span.controls
      = link_to 'Edit', edit_group_path(group)
      = link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Group", new_group_path
