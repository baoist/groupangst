- form_for @user, :method => "post" do |f|
  = f.error_messages
  %fieldset
    = f.label :username
    = f.text_field :username
  %fieldset
    = f.label :email
    = f.text_field :email
  %fieldset
    = f.label :password
    = f.password_field :password
  %fieldset
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  %fieldset
    = f.submit "Submit"